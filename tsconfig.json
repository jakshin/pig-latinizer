{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "types",
    "listEmittedFiles": true,
    "outDir": "lib",
    "pretty": true,
    "target": "es5",

    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
